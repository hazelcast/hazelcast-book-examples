<hazelcast xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://hazelcast.com/schema/config
                               https://hazelcast.com/schema/config/hazelcast-config-3.6.xsd"
           xmlns="https://hazelcast.com/schema/config">

    <network>
        <join>
            <multicast enabled="true"/>
        </join>
    </network>

    <map name="cities">
        <time-to-live-seconds>4</time-to-live-seconds>
        <indexes>
            <index>name</index>
        </indexes>
        <backup-count>1</backup-count>
        <async-backup-count>1</async-backup-count>
    </map>
</hazelcast>
