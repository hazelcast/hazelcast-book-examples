<hazelcast xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.hazelcast.com/schema/config
                               http://www.hazelcast.com/schema/config/hazelcast-config-3.11.xsd"
           xmlns="http://www.hazelcast.com/schema/config">
    <network>
        <join>
            <multicast enabled="true"/>
        </join>
    </network>

    <map name="personsWithIndex">
        <indexes>
            <index ordered="false">name.forename</index>
            <index ordered="false">name.surname</index>
        </indexes>
    </map>

    <map name="personsWithCompositeIndex">
        <indexes>
            <index ordered="false">name.forename, name.surname</index>
        </indexes>
    </map>

    <map name="personsWithBitmapIndexOnHabits">
        <indexes>
            <index>BITMAP(habits[any])</index>
        </indexes>
        <!-- disable record caching for more precise index memory cost approximation -->
        <cache-deserialized-values>NEVER</cache-deserialized-values>
    </map>

    <map name="personsWithHashIndexOnHabits">
        <indexes>
            <index ordered="false">habits[any]</index>
        </indexes>
        <!-- disable record caching for more precise index memory cost approximation -->
        <cache-deserialized-values>NEVER</cache-deserialized-values>
    </map>

    <map name="personsWithoutIndex">
    </map>
</hazelcast>
