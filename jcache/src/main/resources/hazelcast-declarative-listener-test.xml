<hazelcast xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://hazelcast.com/schema/config
                               https://hazelcast.com/schema/config/hazelcast-config-3.6.xsd"
           xmlns="https://hazelcast.com/schema/config">

    <cache name="cache">
        <cache-entry-listeners>
            <cache-entry-listener old-value-required="true" synchronous="true">
                <cache-entry-listener-factory class-name="com.hazelcast.examples.declarative.LoggingEntryListenerFactory"/>
            </cache-entry-listener>
        </cache-entry-listeners>
    </cache>
</hazelcast>
